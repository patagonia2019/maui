<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Testmaui60.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Testmaui60"
    Shell.FlyoutBehavior="Flyout">
    <TabBar>
        <Tab Title="Main" Icon="dotnet_bot.png">
            <ShellContent
                Title="MainPage"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>

        <Tab Title="Layout" Icon="dotnet_bot.png">
            <ShellContent
                Title="LayoutExample"
                ContentTemplate="{DataTemplate local:LayoutExample}"
                Route="LayoutExample" />
        </Tab>

        <Tab Title="New" Icon="dotnet_bot.png">
            <ShellContent
                Title="NewPage1"
                ContentTemplate="{DataTemplate local:NewPage1}"
                Route="NewPage1" />
        </Tab>

        <Tab Title="Test" Icon="dotnet_bot.png">
            <ShellContent
                Title="TestPage"
                ContentTemplate="{DataTemplate local:TestPage}"
                Route="TestPage" />
        </Tab>
    </TabBar>

</Shell>

