<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Testmaui60.LayoutExample"
             Title="LayoutExample">
    <VerticalStackLayout x:Name="VStackLayout" Padding="{OnPlatform iOS='10,50,80,90', Default='30'}"
                         BackgroundColor="{OnPlatform iOS='Green', Android='Red'}">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Grid ColumnDefinitions="Auto, 30, Auto">
            <Button Grid.Column="0" Text="Test Button" WidthRequest="100"/>
            <Button Grid.Column="2" Text="Test Button" WidthRequest="100"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>
